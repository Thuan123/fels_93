<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("header_title"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("header_home_link"), root_path %></li>
        <li><%= link_to t("header_help_link"), about_path %></li>
        <% if logged_in? %>
        <li><%= link_to t("header_users_link"), "#" %></li>
      <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
          <%= t "header_account_title" %><b class="caret"></b>
        </a>
        <ul class="dropdown-menu">
          <li><%= link_to t("header_account_profile"), "#" %></li>
          <li><%= link_to t("header_account_settings"), "#" %></li>
          <li class="divider"></li>
          <li>
            <%= link_to t("header_account_logout"), logout_path,  method: "delete" %>
          </li>
        </ul>
      </li>
      <% else %>
        <li><%= link_to t("header_sign_in_link"), login_path %></li>
      <% end %>
      </ul>
    </nav>
  </div>
</header>
