<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("header_title"), root_path, id: "logo" %>
    <% if logged_in? %>
      <nav>
        <ul class="nav navbar-nav navbar-left">
          <% if admin_check? %>
            <li><%= link_to t("admin_category"), admin_categories_path %></li>
            <li><%= link_to t("admin_word"), admin_words_path %></li>
          <% end %>
        </ul>
      </nav>
    <% end %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("header_home_link"), root_path %></li>
        <li><%= link_to t("header_help_link"), about_path %></li>
        <% if logged_in? %>
          <% if admin_check? %>
            <li><%= link_to t("header_users_link"), admin_users_path %></li>
          <% else %>
            <li><%= link_to t("header_users_link"), users_path %></li>
          <% end %>
          <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <%= t "header_account_title" %><b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
            <li><%= link_to t("header_account_profile"), user_path(current_user) %></li>
            <li><%= link_to t("header_account_settings"), edit_user_path(current_user) %></li>
            <li class="divider"></li>
            <li>
              <%= link_to t("header_account_logout"), logout_path,  method: "delete" %>
            </li>
          </ul>
        </li>
        <% else %>
          <li><%= link_to t("header_sign_in_link"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
