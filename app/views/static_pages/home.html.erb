<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render "shared/user_info" %>
      </section>
      <section class="stats">
        <%= render "shared/stats" %>
      </section>
    </aside>
    <div class="col-md-8">
    </div>
  </div>
<% else %>
<div class="center jumbotron">
  <h1><%= t "title" %></h1>
  <h2><%= t "homepage_content" %></h2>
  <%= link_to t("sign_up_btn"), signup_path , class: "btn btn-lg btn-primary" %>
</div>
<% end %>
